<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000"
    tools:context="com.example.al.calculator.MainActivity">


    <TableLayout
        android:stretchColumns="*"
        android:minHeight="200dp"
        android:id="@+id/tableLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000">

        <TableRow
            android:id="@+id/screen"
            android:layout_width="match_parent"
            android:layout_height="94dp"
            android:background="#222"
            android:gravity="right">

            <TextView
                android:id="@+id/screenText"
                android:layout_marginVertical="10sp"
                android:textAlignment="textEnd"
                android:textColor="#FFF"
                android:textSize="72sp"
                android:visibility="visible" />
        </TableRow>


        <TableRow
            android:id="@+id/row0"
            android:layout_width="150dp"
            android:layout_height="637dp"
            android:background="#000"
            android:gravity="center"
            android:minHeight="120dp">

            <Button
                android:id="@+id/clear"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#000"
                android:gravity="center"
                android:text="C"
                android:textColor="#FFF" />

            <Button
                android:id="@+id/posOrNeg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#000"
                android:gravity="center"
                android:text="+ / -"
                android:textColor="#FFF" />

            <Button
                android:id="@+id/percent"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#000"
                android:gravity="center"
                android:text="%"
                android:textColor="#FFF" />

            <Button
                android:id="@+id/divide"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#000"
                android:gravity="center"
                android:text="/"
                android:textColor="#FFF" />
        </TableRow>


        <TableRow
            android:minHeight="120dp"
            android:id="@+id/row1"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="#000"
            android:gravity="center">

            <Button
                android:id="@+id/seven"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#000"
                android:gravity="center"
                android:text="7"
                android:textColor="#FFF" />

            <Button
                android:id="@+id/eight"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#000"
                android:gravity="center"
                android:text="8"
                android:textColor="#FFF" />

            <Button
                android:id="@+id/nine"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#000"
                android:gravity="center"
                android:text="9"
                android:textColor="#FFF" />

            <Button
                android:id="@+id/multiply"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#000"
                android:gravity="center"
                android:text="x"
                android:textColor="#FFF" />
        </TableRow>

        <TableRow
            android:minHeight="120dp"
            android:id="@+id/row2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#000"
            android:gravity="center">

            <Button
                android:id="@+id/four"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#000"
                android:gravity="center"
                android:text="4"
                android:textColor="#FFF" />

            <Button
                android:id="@+id/five"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#000"
                android:gravity="center"
                android:text="5"
                android:textColor="#FFF" />

            <Button
                android:id="@+id/six"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#000"
                android:gravity="center"
                android:text="6"
                android:textColor="#FFF" />

            <Button
                android:id="@+id/minus"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#000"
                android:gravity="center"
                android:text="-"
                android:textColor="#FFF" />
        </TableRow>

        <TableRow
            android:minHeight="120dp"
            android:id="@+id/row3"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="#000"
            android:gravity="center">

            <Button
                android:id="@+id/one"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#000"
                android:gravity="center"
                android:text="1"
                android:textColor="#FFF" />

            <Button
                android:id="@+id/two"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#000"
                android:gravity="center"
                android:text="2"
                android:textColor="#FFF" />

            <Button
                android:id="@+id/three"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#000"
                android:gravity="center"
                android:text="3"
                android:textColor="#FFF" />

            <Button
                android:id="@+id/plus"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#000"
                android:gravity="center"
                android:text="+"
                android:textColor="#FFF" />
        </TableRow>

        <TableRow
            android:minHeight="120dp"
            android:id="@+id/row4"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:background="#000"
            android:gravity="center">

            <Button
                android:id="@+id/zero"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#000"
                android:gravity="center"
                android:text="0"
                android:textAlignment="gravity"
                android:textColor="#FFF" />

            <Button
                android:id="@+id/decimal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#000"
                android:gravity="center"
                android:text="."
                android:textColor="#FFF" />

            <Button
                android:id="@+id/equals"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_span="2"
                android:background="#222"
                android:gravity="center"
                android:text="="
                android:textColor="#FFF" />
        </TableRow>
    </TableLayout>

</RelativeLayout>
